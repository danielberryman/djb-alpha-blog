<% if @user.errors.any? %>
	<h2>The following errors prevented the user from being updated</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<!-- both label and input use f? -->
					<!-- a label for the input -->
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<!-- the input -->
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
				</div>
			</div>	
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			 [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>
			
	</div>
</div>